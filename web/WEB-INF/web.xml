<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>api.filter.EncodingFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>BackServletFilter</filter-name>
		<filter-class>api.filter.BackServletFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>BackServletFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>api.servlet.UserServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/userServlet</url-pattern>
	</servlet-mapping>	
	
	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>api.servlet.HomeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/homeServlet</url-pattern>
	</servlet-mapping>	
	
	<servlet>
		<servlet-name>ProjectServlet</servlet-name>
		<servlet-class>api.servlet.ProjectServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ProjectServlet</servlet-name>
		<url-pattern>/projectServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ProjectDetailsServlet</servlet-name>
		<servlet-class>api.servlet.ProjectDetailsServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ProjectDetailsServlet</servlet-name>
		<url-pattern>/projectDetailsServlet</url-pattern>
	</servlet-mapping>
		
</web-app>